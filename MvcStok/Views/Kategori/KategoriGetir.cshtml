@model MvcStok.Models.Entity.TBL_KATEGORILER


@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- 3 parametre gönderilecek,-->
<!-- formda action oldugu zaman beginform çalışacak.-->


@using (Html.BeginForm("KategoriGuncelle","Kategori",FormMethod.Post))
{

    <div class="form-group">

        <!--LİNQ kullanımı-->
        @Html.LabelFor(m=>m.KATEGORIID)     <!--birisi başlık diğeri o başlığın içeriği-->
        @Html.TextBoxFor(m=>m.KATEGORIID, new { @class="form-control"})

        <br/>
        @Html.LabelFor(m=>m.KATEGORIAD)
        @Html.TextBoxFor(m=>m.KATEGORIAD, new { @class="form-control"})
     </div>

     <div style="margin-top:15px">

         <button class="btn btn-warning">KATEGORİ GÜNCELLE</button>
     </div>


} 

