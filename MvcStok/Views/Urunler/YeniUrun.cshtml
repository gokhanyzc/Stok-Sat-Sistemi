@model MvcStok.Models.Entity.TBL_URUNLER


@{
    ViewBag.Title = "YeniUrun";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


    <form class="form-group" method="post">

        <div>
            <label>Ürün Adı</label>
            <input type="text" class="form-control" name="URUNAD" required="" maxlength="50"/>
        </div>

        <div>
            <label>Ürün Markası</label>
            <input type="text" class="form-control" name="MARKA" placeholder="Markayı Giriniz:"  required="" /> 
        </div>

        <div>

            <label>Ürün Kategorisi Seçiniz</label>
          <!-- <input type="text" class="form-control" name="URUNKATEGORI" />  -->

            <!-- m modelden geliyor , aşagıda linq kullanımı var.-->
          @Html.DropDownListFor(m => m.TBL_KATEGORILER.KATEGORIID , (List<SelectListItem>)ViewBag.dgr, new { @class="form-control"})
            <!--KATEGORIID bizim ekleme yapacak oldugumuz alan.-->
        </div>

        <div>
            <label>Ürün Fiyat</label>
            <input type="text" class="form-control" name="FIYAT"  required=""/>

        </div>

        <div>

            <label>Ürün Stok</label>
            <input type="text" class="form-control" name="STOK"  required=""/>
        </div>

        <div style="margin-top:15px">
            <button class="btn btn-info" id="btn1">Ürün Ekle</button>
        </div>

        <script>

            $('#btn1').click(function () {

                alert("Ürün Ekleme İşlemi Yapıldı.");
            });

        </script>



    </form>


